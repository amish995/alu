module comparator (
  input alufn[6],
  input z,
  input v,
  input n,
  output comp[8]
  ) {

  always { 

    comp = 0;
  
    case (alufn[2:1]) {
    
    2b01:
        comp[0] = z;
    2b10:
        comp[0] = n^v;
    2b11: 
        comp[0] = z | (n^v);
    default:
        comp[0] = 0;
      
  }
 }
}  
